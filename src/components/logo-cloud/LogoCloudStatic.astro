---
/**
 * * Logo sloud section static
 *
 * These are taken from the src/icons folder. You may desire to modify any SVGs you use to have the fill set to "currentColor"
 * to use the current text color. That is how I have set up these icons for demo purposes
 */

import { Icon } from "astro-icon/components";
---

<section
	id="logo-cloud-static"
	class="bg-base-100 dark:bg-background dark:border-base-900 flex items-end justify-center py-16 md:py-20 dark:border-y"
>
	<div class="site-container">
		<div class="mx-auto max-w-xl">
			<div class="flex justify-center">
				<h2 class="description inline">Trusted by Industry Leaders</h2>
			</div>
		</div>
		<div class="mt-12">
			<div class="description grid w-full grid-cols-2 gap-2 sm:grid-cols-3 lg:grid-cols-6">
				<div class="flex px-8">
					<Icon name="logos/astro" class="logo py-2" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/dribbble" class="logo" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/sanity" class="logo py-2" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/contentfull" class="logo" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/github" class="logo" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/notion" class="logo" aria-label="logo" />
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	@import "tailwindcss/theme" theme(reference);
	@import "@/styles/tailwind-theme.css" theme(reference);

	@import "tailwindcss/theme" theme(reference);
	@import "@/styles/tailwind-theme.css" theme(reference);

	.logo {
		@apply mx-auto h-12 w-auto opacity-60 transition-opacity duration-300 hover:opacity-100;
	}
</style>
