---
/**
 * style="animation: none;" makes it so the close animation doesn't run on page load
 * It is later removed in the Accordion.astro script
 */
type Props = {
	class?: string;
	details: string;
};

const { class: className, details } = Astro.props;
---

<div
	class:list={[
		"starwind-accordion-content",
		"transform-gpu overflow-hidden",
		"data-[state=closed]:animate-accordion-up data-[state=closed]:h-0",
		"data-[state=open]:animate-accordion-down",
		className,
	]}
	data-state="closed"
	style="animation: none;"
>
	<div class="markdown-content overflow-hidden px-5 pt-0 pb-4">
		<Fragment set:html={details} />
	</div>
</div>
