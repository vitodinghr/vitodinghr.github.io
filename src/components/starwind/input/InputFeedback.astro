---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"div">;

const { class: className, ...rest } = Astro.props;
---

<div
	class:list={[
		"invisible text-xs font-medium peer-invalid:visible peer-invalid:text-red-700 dark:peer-invalid:text-red-400",
		className,
	]}
	{...rest}
>
	<slot />
</div>
