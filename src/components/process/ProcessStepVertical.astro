---
import { Icon } from "astro-icon/components";

interface Props {
	number: number;
	title: string;
	description: string;
	icon: string;
}

const { number, title, description, icon, ...rest } = Astro.props;
---

<div class="group relative" {...rest}>
	<div class="flex items-start gap-8">
		<!-- Number & Icon Container -->
		<div class="relative">
			<div
				class="bg-primary group-hover:bg-primary-darker flex h-16 w-16 items-center justify-center rounded-full text-xl font-bold text-white transition-all duration-300"
			>
				{number}
			</div>
			<!-- Icon (Absolute Positioned) -->
			<div
				class="text-primary dark:text-primary-400 bg-background dark:bg-base-900 absolute -right-1 -bottom-1 flex h-8 w-8 items-center justify-center rounded-full shadow-sm transition-transform duration-300 group-hover:scale-110"
				aria-hidden="true"
			>
				<Icon name={icon} class="h-4 w-4" />
			</div>
		</div>

		<!-- Content -->
		<div class="flex-1 pt-3">
			<h3 class="group-hover:text-primary mb-2 text-xl font-bold transition-colors">
				{title}
			</h3>
			<p class="description text-base leading-relaxed">
				{description}
			</p>
		</div>
	</div>
</div>
